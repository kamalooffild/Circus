<Page x:Class="Circus.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Circus.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="EmployeesPage"
      Loaded="Page_Loaded">

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal">
                <TextBlock Text="Поиск" />
                <TextBox x:Name="TBSearch"
                         Width="200"
                         TextChanged="TBSearch_TextChanged" />
                <Button x:Name="BAdd"
                        Content="Добавить"
                        Click="BAdd_Click" />
                <Button x:Name="BEdit"
                        Content="Изменить"
                        Click="BEdit_Click" />
                <Button x:Name="BRemove"
                        Content="Удалить"
                        Click="BRemove_Click" />
            </StackPanel>
            <ListView x:Name="LVEmployees">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding LastName, StringFormat='Фамилия: {0}'}" />
                            <TextBlock Text="{Binding FirstName, StringFormat='Имя: {0}'}" />
                            <TextBlock Text="{Binding Salary, StringFormat='Зарплата: {0}'}" />
                            <TextBlock Text="{Binding Post.Name, StringFormat='Должность: {0}'}" />
                            <Image Source="{Binding Image}"
                                   Width="200" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </Grid>
</Page>
