<Page x:Class="Circus.Pages.AnimalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Circus.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AnimalPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    Width="300">
            <TextBlock Text="Кличка" />
            <TextBox Text="{Binding Name}" />
            <TextBlock Text="Возраст" />
            <TextBox Text="{Binding Age}" />
            <TextBlock Text="Вид" />
            <ComboBox x:Name="CBTypes"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding TypeAnimal}" />
            <TextBlock Text="Клетка" />
            <ComboBox x:Name="CBCages"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding Cage}" />
            <Button x:Name="BSave"
                    Content="Сохранить"
                    Click="BSave_Click" />
            <Button x:Name="BCancel"
                    Content="Отмена"
                    Click="BCancel_Click" />
        </StackPanel>
    </Grid>
</Page>
